<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:id="@+id/selecitem_img_selecteds"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/gray"
        android:scaleType="centerCrop"/>

    <TextView android:id="@+id/selectitem_txt_selecteds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/selecitem_img_selecteds"
        app:layout_constraintTop_toTopOf="@id/selecitem_img_selecteds"
        app:layout_constraintEnd_toEndOf="@id/selecitem_img_selecteds"
        app:layout_constraintBottom_toBottomOf="@id/selecitem_img_selecteds"
        android:text=""
        android:textSize="@dimen/textNumberSelecteds"/>

</androidx.constraintlayout.widget.ConstraintLayout>