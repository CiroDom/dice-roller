<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DiceRoller" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Cores Azul Escuro -->
        <item name="colorPrimary">#0D47A1</item> <!-- Azul escuro para a cor de fundo -->
        <item name="colorPrimaryVariant">#003366</item> <!-- Variação mais escura do azul para o fundo -->
        <item name="colorOnPrimary">@color/white</item> <!-- Texto claro sobre o fundo azul escuro -->

        <item name="colorSecondary">#1565C0</item> <!-- Azul mais claro para a cor secundária -->
        <item name="colorSecondaryVariant">#0D47A1</item> <!-- Variação mais escura do azul para a cor secundária -->
        <item name="colorOnSecondary">@color/black</item> <!-- Texto escuro sobre a cor secundária -->

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize seu tema aqui. -->
    </style>
</resources>
